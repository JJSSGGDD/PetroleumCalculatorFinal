<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.gravedadapi.GravedadApiFragment">

    <TextView
        android:id="@+id/text_gravedadapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="CALCULO GRAVEDAD API "
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#9C27B0"
        android:textSize="48sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gravedad Especifica (GE) :"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txt2gravedadespecifica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="(GE) a 60°F"
            android:inputType="numberDecimal"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btncalculargravedadapi"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CALCULAR GRADOS API"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btneliminargravedadapi"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ELIMINAR DATOS"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt2gradosapi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GRADOS API  : "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt2tipodehidrocarburo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIPO DE HIDROCARBURO  (°API) :"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgimagenejemplo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/formulagravedadespecifica"
            android:visibility="invisible" />  <!-- Volver una imagen invisble-->

    </LinearLayout>
</LinearLayout>